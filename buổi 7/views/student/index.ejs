<h1>Danh sách sinh viên</h1>
			<a href="/create" class="btn btn-info">Add</a>
			<form action="/" method="GET">
				<label class="form-inline justify-content-end">Tìm kiếm: <input type="search" name="search" class="form-control" value="<%= search%>">
				<button class="btn btn-danger">Tìm</button>
				</label>
			</form>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>#</th>
						<th>Mã SV</th>
						<th>Tên</th>
						<th>Ngày Sinh</th>
						<th>Giới Tính</th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
                    <% students.forEach((student, index) => {%>
                        <tr>
                            <td><%=index+1%></td>
                            <td><%=student.id%></td>
                            <td><%=student.name%></td>
                            <td><%=format(new Date(student.birthday), 'dd/MM/yyyy')%></td>
                            <td><%=student.gender%></td>
                            <td><a class="btn btn-success btn-sm" href="/edit/<%=student.id%>">Sửa</a></td>
                            <td><a class="btn btn-danger btn-sm" href="/destroy/<%=student.id%>" type="student">Xóa</a></td>
                        </tr>
                        <%})%>
				</tbody>
			</table>
			<%- include ('../pagination.ejs')%>
			<div>
				<span>Số lượng: <%=students.length%></span>
			</div>